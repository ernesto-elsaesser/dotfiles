[core]
    editor = vim
[init]                                                                          
    defaultBranch = main
[format]
    pretty = %h%d %s [%ar, %ae]
[pull]
    ff = only
[alias]
    s = status
    d = diff ; working dir vs HEAD
    ds = diff --staged ; staged vs HEAD
    l = log -10
    a = add --all ; stage all
    x = reset HEAD ; unstage all
    c = commit -m ; COMMIT_MESSAGE
    ca = commit -a -m ; COMMIT_MESSAGE
    p = push
    pu = push -u origin HEAD ; push new branch to upstream repo 
    pf = push --force
    g = pull
    f = fetch
    fa = fetch --all
    co = checkout ; BRANCH_NAME
    b = branch -vv ; list branches 
    bc = checkout -b ; BRANCH_NAME create branch
    bm = branch -m ; BRANCH_NAME rename branch
    bd = branch -d ; BRANCH_NAME
    hl = rev-parse HEAD
    hs = rev-parse --short HEAD
    r = reset --hard ; COMMIT_HASH revert to specified commit
    r0 = reset --hard HEAD ; discard all changes in working dir (and index) 
    r1 = reset --hard HEAD^ ; discard all changes and revert to previous commit
    e = reset HEAD^ ; edit last commit
    em = commit --amend -m ; COMMIT_MESSAGE ; edit last commit message
    ea = commit --amend --no-edit ; add changes to last commit
