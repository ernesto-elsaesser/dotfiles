#!/bin/bash

cd "${BASH_SOURCE%/*}"
DOT_DIR=`pwd`

if [[ $OSTYPE == darwin* ]]; then
  RC="$HOME/.zlogin"
else
  RC="$HOME/.profile"
fi

echo "alias v='vim -u $DOT_DIR/vimrc'" >> $RC
echo "alias g='git -c \"include.path=$DOT_DIR/gitconfig\"'" >> $RC
echo "alias l='ls -lh --color'" >> $RC
echo "alias la='ls -lha --color'" >> $RC

echo "updated $RC"

