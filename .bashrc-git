# start git shell via
# > bash --rcfile=.bashrc-git

# bash completion
source /etc/profile

# prompt
PS1="\w ($(git branch --show-current) $(git diff --numstat | awk '{c+=1}{i+=$1}{d+=$2} END{print c"C +"i"/-"d}' )) > "

alias s='git status -s'
alias a='git add --all; s'

function c {
    git commit -m "$*"
}

alias p='git push'

alias ca='git add --all; git commit -m'
alias pl='git pull'
alias pu='git push -u origin HEAD'
alias mr='git merge --no-edit'
alias co='git checkout'
alias lo='git log --pretty=format:"%h %s (%an %ar)"'
alias cb='git checkout -b'
alias bd='git branch -d'
alias rb='git rebase'
alias rh='git reset --hard'
