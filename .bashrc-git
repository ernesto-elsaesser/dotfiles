# start git shell via
# > bash --rcfile=.bashrc-git

# load completions
source /usr/share/bash-completion/completions/git


# prompt
function update_prompt {
    # filter output for name and tracking status of current branch
    PS1="\w $(git branch -vv | grep ^* | sed -E 's/\* (\S+)\s+\S+ \[[^:]+:?(.*)\].*/[\1\2]/') > "
}
PROMPT_COMMAND=update_prompt


# aliases

alias pl='git pull --ff-only'

alias s='git status -s'

alias a='git add --all; s'

function c {
    # use function to allow unquoted message
    git commit -m "$*"
}

alias p='git push'
alias pu='git push -u origin HEAD'
alias pf='git push --force'

alias mr='git merge --no-edit'

alias co='git checkout'
__git_complete co _git_checkout

alias lo='git log --pretty=format:"%h %s (%an %ar)"'

alias b='git branch'
alias cb='git checkout -b'
alias bd='git branch -d'
__git_complete bd _git_checkout

alias rb='git rebase'

alias rh='git reset --hard'
