# start git shell via
# > bash --rcfile=.bashrc-git

# bash completion
source /etc/profile


# prompt
PS1="($(git branch --show-current)) \w\$ "


# aliases

alias pl='git pull --ff-only'

alias s='git status -s -b'

alias d='git diff --stat'
alias dc='git diff --stat --cached'

alias a='git add --all; git status -s'

function c {
    git commit -m "$*"
}

alias p='git push'
alias pu='git push -u origin HEAD'
alias pf='git push --force'

alias mr='git merge --no-edit'

alias co='git checkout'

alias lo='git log --pretty=format:"%h %s (%an %ar)"'

alias cb='git checkout -b'
alias bd='git branch -d'

alias rb='git rebase'

alias rh='git reset --hard'
